#include <stdio.h>

int main(){
    
    int n1, n2;
    double divisao;
    
    printf("Digite o primeiro valor: ");
    scanf("%d",&n1);
    
    while(n2 == 0){
        printf("Digite o segundo valor: ");
        scanf("%d",&n2);
    }
    
    divisao = n1 * 1.0 / n2;
    
    printf("Resultado: %.1f",divisao);

    return 0;
}

